@{
    ViewData["Title"] = "Quadrants";
}

@model List<TaskModel>

<br /><br />
<h1>Time Management Matrix</h1>
<br /><br />


<!-- Matrix container -->
      <div class="container">
          <!-- Headers row -->
          <div class="row">
              <div class="col-sm-2 col-lg-1"></div>
              <div class="col-sm-5 col-lg-5 border-bottom"><h3>Urgent</h3></div>
              <div class="col-sm-5 col-lg-5 border-bottom"><h3>Not Urgent</h3></div>
          </div>
          <!-- "Important row" -->
          <div class="row">
              <div class="col-sm-2 col-lg-1 border-right"><h3 class="vertical-text">Important</h3></div>
              <div class="col-sm-5 col-lg-5 border">
                  <table class="table">
                      <thead>
                          <tr>
                              <td>Quadrant 1</td>
                          </tr>
                      </thead>
                      @foreach (var x in Model)
                      {
                          @if (x.Quadrant == 1)
                          {
                              @if (x.Completed == false)
                              {
                                <tr>
                                    <td>@x.Task</td>
                                    <td>@x.DueDate</td>
                                    <td>@x.Category.CategoryName</td>
                                    <td> <a asp-controller="Home" asp-action="EditTask" asp-route-taskid="@x.TaskID">Edit</a> </td>
                                    <td> <a asp-controller="Home" asp-action="DeleteTask" asp-route-taskid="@x.TaskID">Delete</a> </td>
                                </tr>
                              }
                          }
                      }
                  </table>
              </div>

              <div class="col-sm-5 col-lg-5 border">
                  <table class="table">
                      <thead>
                          <tr>
